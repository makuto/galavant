CC = gcc ;
C++ = g++ ;
LINK = g++ ;

# Galavant requires C++11
# fPIC = position independent code. This is so the lib can be linked in other libs/executables
C++FLAGS = -std=c++11 -fPIC -g ;
OBJECTC++FLAGS = -std=c++11 ;

HDRS = thirdParty/flatbuffers/include ;

